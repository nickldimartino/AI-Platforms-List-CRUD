<%- include("../partials/header"); %>

<!-- display the OpenAI generated response -->
<section id="chatbots-index-page">
    <h1 id="chatbots-index-title"><%= title %></h1>
    <div id="chatbots-index-response">
        <%= response %>
    </div>
    <div id="chatbots-index-user-propmt">
        <!-- POST request with the user inputted data -->
        <form action="/chatbots/new" method="POST">
            <input type="text" name="inputText" placeholder="Enter your prompt here...">
            <input type="submit" value="Enter" id="chatbots-index-btn">
        </form>
    </div>
</section>

<%- include("../partials/footer"); %>